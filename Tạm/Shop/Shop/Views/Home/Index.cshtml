    <div class="maincontent-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="latest-product">
                        <h2 class="section-title">Latest Products</h2>
                        <div class="product-carousel">
                            @foreach (Product pd in lst)
                           { 
                                
                                <div class="single-product">
                                    <div class="product-f-image">
                                        <img src="@Url.Content(pd.linkImage)" alt="">
                                        <div class="product-hover">
                                            <a href="~/Home/addItemCart?idPD=@pd.idPD" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                            <a href="~/Home/SingleProduct?idPD=@pd.idPD" class="view-details-link"><i class="fa fa-link"></i> See details</a>
                                        </div>
                                    </div>

                                    <h2><a href="~/Home/SingleProduct?idPD=@pd.idPD">@pd.TenPD</a></h2>

                                    <div class="product-carousel-price">
                                        <ins>@pd.newPrice</ins> <del>@pd.oldPrice</del>
                                    </div>
                                </div>
                            }  
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End main content area -->

