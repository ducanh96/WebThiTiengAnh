@using Shop.Models.Entities
@{
    IEnumerable<Product> lst = (IEnumerable<Product>) ViewData["lst"];
    int dem = 0;
}
<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Shop</h2>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            @foreach (Product pd in lst)
            {
                dem++;
                <div class="col-md-3 col-sm-6">
                    <div class="single-shop-product single-product">
                        <div class="product-upper product-f-image">
                            <img src="@Url.Content(pd.linkImage)" alt="">
                            <div class="product-hover">             
                                <a href="~/Home/SingleProduct?idPD=@pd.idPD" class="view-details-link"><i class="fa fa-link"></i> See details</a>
                            </div>
                        </div>
                        <h2><a href="~/Home/SingleProduct?idPD=@pd.idPD">@pd.TenPD</a></h2>
                        <div class="product-carousel-price">
                            <ins>@pd.newPrice</ins> <del>@pd.oldPrice</del>
                        </div>

                        <div class="product-option-shop">
                            <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow" href="~/Home/addItemCart?idPD=@pd.idPD">Add to cart</a>
                        </div>
                    </div>
                </div>
                if (dem == 3 ) {
                    dem = 0; 
                    <br />}
            }
           
           
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="product-pagination text-center">
                    <nav>
                        <ul class="pagination">
                            <li>
                                <a href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li>
                                <a href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

